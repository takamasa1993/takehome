<div class="container">
  <!-- 配信者の紹介セクション -->
  <div class="streamer-info">
    <h1>配信者名: <%= @streamer[:name] %></h1>
    <p><%= @streamer[:bio] %></p>
  </div>

  <!-- 配信スケジュールセクション -->
  <div class="schedule">
    <h2>配信スケジュール</h2>
    <ul>
      <% @schedule.each do |item| %>
        <li><%= item[:time] %>: <%= item[:title] %></li>
      <% end %>
    </ul>
  </div>

  <!-- クリップ一覧セクション -->
  <div class="clips">
    <h2>最新クリップ</h2>
    <div class="clips-container">
      <% @clips.each do |clip| %>
        <div class="clip">
          <h3><%= clip[:title] %></h3>
          <video src="<%= clip[:url] %>" controls></video>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 通知登録ボタン -->
  <div class="notification">
    <button class="btn btn-primary">配信開始通知を受け取る</button>
  </div>
</div>